<%= form_for :message, url: message_path do |f| %>
  <table>
    <tr>
      <td><%= f.label :name %></td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td><%= f.label :email %></td>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <td><%= f.label :subject %></td>
      <td><%= f.text_field :subject %></td>
    </tr>
    <tr>
      <td><%= f.label :body %></td>
      <td><%= f.text_area :body %></td>
    <tr>
      <td colspan='2' style="text-align: center;"><%= f.submit "Send Email" %></td>
    </tr>
  </table>
<% end %>
